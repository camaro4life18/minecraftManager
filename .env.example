# Backend Environment Variables
PORT=5000
NODE_ENV=production

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=minecraft_user
DB_PASSWORD=minecraft_password
DB_NAME=minecraft_manager

# Proxmox Configuration
PROXMOX_HOST=your-proxmox-host.com
PROXMOX_USERNAME=your-proxmox-user
PROXMOX_PASSWORD=your-proxmox-password
PROXMOX_REALM=pam

# Velocity Server Configuration (Optional)
# Leave blank to skip velocity server integration
VELOCITY_HOST=your-velocity-host.com
VELOCITY_PORT=8233
VELOCITY_API_KEY=your-velocity-api-key-or-password
# VELOCITY_BACKEND_NETWORK=192.168.1
# This is used to calculate backend server IPs for velocity (e.g., 192.168.1.102 for VM 102)

# Authentication
JWT_SECRET=your-secret-key-change-in-production

# Frontend Configuration (for docker-compose)
REACT_APP_API_URL=http://localhost:5000