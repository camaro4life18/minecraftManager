# Backend Environment Variables
PORT=5000
NODE_ENV=production

# Frontend Configuration
# This is auto-generated by setup.sh with the machine's IP address
FRONTEND_API_URL=http://localhost:5000

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=minecraft_user
DB_PASSWORD=minecraft_password
DB_NAME=minecraft_manager

# Proxmox Configuration
# NOTE: These are configured via the Admin Settings web page (⚙️ Configuration)
# No need to edit these manually - the admin page will save them to the database
PROXMOX_HOST=
PROXMOX_USERNAME=
PROXMOX_PASSWORD=
PROXMOX_REALM=pam

# Velocity Proxy Server Configuration (Optional)
# This integration uses SSH to automatically edit velocity.toml and reload the proxy
# Leave VELOCITY_HOST blank to skip velocity server integration
VELOCITY_HOST=
VELOCITY_SSH_PORT=22
VELOCITY_SSH_USER=joseph
VELOCITY_SSH_KEY=/root/.ssh/id_rsa
VELOCITY_CONFIG_PATH=/opt/velocity-proxy/velocity.toml
VELOCITY_SERVICE_NAME=velocity

# Authentication
JWT_SECRET=your-secret-key-change-in-production

# Frontend Configuration (for docker-compose)
REACT_APP_API_URL=http://localhost:5000